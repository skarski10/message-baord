{{#if addAnswer}}
<h1>New Answer</h1>
  <div>
    <form>
      <div class="form-group">
        {{input value=name id="name" placeholder="Name"}}
      </div>
      <div class="form-group">
        {{textarea value=answer id="answer" placeholder="Answer"}}
      </div>
      <div class="form-group">
        {{input value=date id="date" placeholder="Date"}}
      </div>
      <button {{action 'saveAnswer'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'showAnswer'}}>Answer</button>
{{/if}}

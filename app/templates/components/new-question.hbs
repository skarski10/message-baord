{{#if addQuestion}}
  <h1>New Question</h1>
  <div>
    <form>
      <div class="form-group">
        {{input placeholder="Name" value=name id="name"}}
      </div>
      <div class="form-group">
        {{input placeholder="Title" value=title id="title"}}
      </div>
      <div class="form-group">
        {{textarea placeholder="Enter your question" value=post id="post"}}
      </div>
      <div class="form-group">
        {{input placeholder="Date" value=date id="date"}}
      </div>
      <button {{action 'saveQuestion'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'questionForm'}}>New Question</button>
{{/if}}
